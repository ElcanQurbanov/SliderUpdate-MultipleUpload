@model SliderInfo

@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <span class="text-danger">@ViewBag.error</span>
    <h1 style="color:darkcyan; text-align:center">SliderInfo create</h1>
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <h4 class="my-3" style="color:blue">Add Header </h4>
        <textarea class="form-control" id="sliderInfo-text" asp-for="Title" rows="5"></textarea>
        <span class="text-danger" asp-validation-for="Title"></span>

        <h4 class="my-3" style="color:blue">Add Image </h4>
        <input class="form-control" id="customFile" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>

       @* <h4 class="my-3" style="color:blue">Add Header </h4>
        <input type="text" placeholder="Header" class="form-control" id="customFile" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>*@

        <h4 class="my-3" style="color:blue">Add Description </h4>
        <input type="text" placeholder="Description" class="form-control" id="customFile" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>

      
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("sliderInfo-text");
    </script>
}

