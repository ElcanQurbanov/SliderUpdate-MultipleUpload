@model IEnumerable<Slider>

@{
    ViewData["Title"] = "Slider";
}


<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right;">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Status</th>
                    <th scope="col">Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var slider in Model)
                {

                    <tr>

                        <td class="py-1">
                            <img src="~/img/@slider.Image" style="width:70px; height:70px; border-radius:50%" alt="image">
                        </td>

                        <td data-id="@slider.Id">
                            @*<p class="@(slider.SoftDelete ? "text-danger" : "text-success")">Status</p>*@
                            @if (slider.SoftDelete)
                            {
                                <div class="deActive-status slider-status"></div>
                            }
                            else
                            {
                                <div class="active-status slider-status"></div>
                            }


                        </td>

                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@slider.Id">
                                Info
                            </a>

                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@slider.Id">
                                Edit
                            </a>

                            <form asp-action="Delete" asp-route-id="@slider.Id" style="display:inline-block;" method="post">
                                <button type="submit" class="btn btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </td>



                    </tr>
                }


            </tbody>
        </table>
    </div>
    

</div>

