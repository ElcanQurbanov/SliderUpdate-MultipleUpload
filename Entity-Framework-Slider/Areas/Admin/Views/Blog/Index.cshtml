@model IEnumerable<Blog>

@{
    ViewData["Title"] = "Blog";
}


<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right;">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Header</th>
                    <th scope="col">Operations</th>
                    @*<th scope="col">Operation</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {

                    <tr>

                        <td class="py-1">
                            <img src="~/img/@blog.Image" style="width:70px; height:70px; border-radius:50%" alt="image">
                        </td>

                        <td>
                            @blog.Header
                           @* <div class="active-status"></div>
                            <div class="deActive"></div>*@


                        </td>

                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@blog.Id">
                                Info
                            </a>

                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@blog.Id">
                                Edit
                            </a>

                            <form asp-action="Delete" asp-route-id="@blog.Id" style="display:inline-block;" method="post">
                                <button type="submit" class="btn btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </td>



                    </tr>
                }


            </tbody>
        </table>
    </div>


</div>